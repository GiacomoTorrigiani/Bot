server {
    listen 80;
    server_name torrisito.it www.torrisito.it;

    location / {
        proxy_pass https://www.xbox.com;
        proxy_set_header Host www.xbox.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Riscrittura dei link
        sub_filter 'https://www.xbox.com' 'https://torrisito.it';
        sub_filter 'http://www.xbox.com' 'http://torrisito.it';
        sub_filter_once off;
    }
}
